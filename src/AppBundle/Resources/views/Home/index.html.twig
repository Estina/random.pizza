{% extends "AppBundle::base.html.twig" %}

{% block metaDescription %}
    Don't waste your mental energy anymore on choosing which pizza to eat.
    Random pizza generator will easily generate the best random choice for you.
{% endblock %}
{% block metaKeywords %}
    random.pizza, random pizza, random pizza generator, pizza randomizer, pizza generator, randomize pizzas
{% endblock %}

{% block scripts %}
    {% javascripts
        '@AppBundle/Resources/public/js/common.js'
        '@AppBundle/Resources/public/js/home.js' output='js/compiled/home.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block controller %}home{% endblock %}

{% block content %}

    <div class="row clearfix">
        <div class="col-md-6 col-md-offset-3 column">
            <form class="form-horizontal">
                <fieldset>

                    <!-- Form Name -->
                    <legend>Location</legend>

                    <!-- Select Basic -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="country">Country</label>
                        <div class="col-md-6">
                            <select id="country" name="country" class="form-control">
                                <option value="">select</option>
                                <option value="dk">Denmark</option>
                                <option value="ee">Estonia</option>
                                <option value="fi">Finland</option>
                                <option value="ie">Ireland</option>
                                <option value="lv">Latvia</option>
                                <option value="lt">Lithuania</option>
                                <option value="se">Sweden</option>
                                <option value="us">USA</option>
                            </select>
                        </div>
                    </div>

                    <!-- Select Basic -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="city">City</label>
                        <div class="col-md-6" id="city-ctr">
                            <select id="city" name="city" class="form-control" disabled>
                                <option value="">select</option>
                            </select>
                        </div>
                    </div>

                    <!-- Select Basic -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="restaurant">Place</label>
                        <div class="col-md-6" id="restaurant-ctr">
                            <select id="restaurant" name="restaurant" class="form-control" disabled>
                                <option value="">select</option>
                            </select>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>

    <div class="row clearfix">
        <div class="col-md-6 col-md-offset-3 column">
            <form class="form-horizontal">
                <fieldset>

                    <!-- Form Name -->
                    <legend>Settings</legend>

                    <!-- Select Basic -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="qty">How many pizzas?</label>
                        <div class="col-md-6">
                            <select id="qty" name="qty" class="form-control">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                            </select>
                        </div>
                    </div>

                    <!-- Multiple Checkboxes (inline) -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="options">Flavor</label>
                        <div class="col-md-8">
                            <label class="checkbox-inline" for="meat">
                                <input name="meat" id="meat" type="checkbox" checked="checked">
                                Meaty
                            </label>

                            <label class="checkbox-inline" for="vegetarian">
                                <input name="vegetarian" id="vegetarian" type="checkbox" checked="checked">
                                Veggy
                            </label>

                            <label class="checkbox-inline" for="fish">
                                <input name="fish" id="fish" type="checkbox" checked="checked">
                                Fishy
                            </label>

                            <label class="checkbox-inline" for="hot">
                                <input name="hot" id="hot" type="checkbox" checked="checked">
                                Hot!
                            </label>
                        </div>
                    </div>

                    <div class="alert alert-danger hidden" role="alert">
                        <div class="text-center">
                            <span class="message"></span>
                        </div>
                    </div>

                </fieldset>
            </form>

        </div>
    </div>

    <div class="row clearfix">
        <div class="col-md-2 col-md-offset-5 column generate-ctr">
            <button id="generate" type="button" class="btn btn-disabled btn-lg btn-block" disabled>Generate!</button>
        </div>
    </div>



{% endblock %}